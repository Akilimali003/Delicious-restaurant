<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        tools:context=".views.MainFoodDisplay">

    <ScrollView
            android:id="@+id/display_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
            android:id="@+id/textViewTitleValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/imageViewValue"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/chicken"
            android:background="@drawable/list_back"/>

    <TextView
            android:id="@+id/textViewDescriptionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description dela nourriture"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

    <Button
            android:id="@+id/buttonCommander"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:text="Commander"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/textViewDescriptionValue"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>