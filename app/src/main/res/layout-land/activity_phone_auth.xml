<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".registration.PhoneAuthActivity"
        tools:layout_editor_absoluteY="73dp">

   <TextView
           android:text="@string/tv_instruction_auth"
           android:layout_width="292dp"
           android:layout_height="98dp"
           android:id="@+id/textView6"
           android:textSize="16sp" android:layout_marginTop="64dp"
           android:gravity="center"
           android:textColor="@android:color/black"
           app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
           android:layout_marginEnd="8dp"
           app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
           app:layout_constraintHorizontal_bias="0.523"/>
   <EditText
           android:layout_width="285dp"
           android:layout_height="45dp"
           android:inputType="phone"
           android:ems="10"
           android:background="@drawable/rounded_profile_edittext"
           android:paddingLeft="5dp"
           android:drawableLeft="@drawable/ic_phone_number_login_black_24dp"
           android:drawablePadding="5dp"
           android:id="@+id/edt_phone_number_activity_phone_auth" android:hint="@string/phone_number"
           android:layout_marginEnd="8dp"
           app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
           app:layout_constraintStart_toStartOf="@+id/progressBar" android:layout_marginLeft="8dp"
           app:layout_constraintHorizontal_bias="0.451" android:layout_marginTop="24dp"
           app:layout_constraintTop_toBottomOf="@+id/textView6"/>

   <ImageView
           android:layout_width="267dp"
           android:layout_height="215dp" app:srcCompat="@drawable/chicken"
           android:id="@+id/imageView2"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
           android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginBottom="8dp"
           app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/btn_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_suivent_activity_phone_auth" android:textColor="@android:color/white"
            android:background="@drawable/rounded_btn_verification_code_auth"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/edt_phone_number_activity_phone_auth"
            app:layout_constraintEnd_toEndOf="@+id/edt_phone_number_activity_phone_auth" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_number_activity_phone_auth"/>


   <ProgressBar
           style="?android:attr/progressBarStyle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" android:elevation="10dp"
           android:id="@+id/progressBar" android:visibility="invisible"
           android:layout_marginBottom="120dp"
           app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
           app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
           app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
           app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.478"/>

   <ImageView
           android:layout_width="242dp"
           android:layout_height="51dp" app:srcCompat="@drawable/delisous_text"
           android:id="@+id/imageView4"
           app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp" app:layout_constraintEnd_toStartOf="@+id/progressBar"
           android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="84dp"
           app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>