<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".registration.PhoneAuthActivity"
        tools:layout_editor_absoluteY="73dp">

 <EditText
         android:layout_width="285dp"
         android:layout_height="45dp"
         android:inputType="phone"
         android:ems="10"
         android:background="@drawable/rounded_profile_edittext"
         android:paddingLeft="5dp"
         android:drawableLeft="@drawable/ic_phone_number_login_black_24dp"
         android:drawablePadding="5dp"
         android:id="@+id/edt_phone_number_activity_phone_auth" android:hint="@string/phone_number"
         android:layout_marginEnd="8dp"
         app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
         app:layout_constraintStart_toStartOf="@+id/progressBar" android:layout_marginLeft="8dp"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@+id/tv_resend_sms_phone_auth_verification"
         app:layout_constraintHorizontal_bias="0.45"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="number" android:drawableLeft="@drawable/ic_verified_code_login_black_24dp"
            android:drawablePadding="-25dp" android:paddingLeft="5dp" android:paddingRight="5dp"
            android:ems="10" android:textAlignment="center"
            android:id="@+id/edt_virification_authentication"
            android:hint="@string/edt_verification_code"
            android:background="@drawable/rounded_profile_edittext"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_suivent_activity_phone_auth"
            app:layout_constraintEnd_toEndOf="@+id/btn_suivent_activity_phone_auth"
            app:layout_constraintStart_toStartOf="@+id/btn_suivent_activity_phone_auth"/>

    <ImageView
            android:layout_width="255dp"
            android:layout_height="298dp" app:srcCompat="@drawable/chicken"
            android:id="@+id/imageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/btn_verification_code"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/btn_suivent_activity_phone_auth" android:textColor="@android:color/holo_red_dark"
            android:background="@drawable/rounded_btn_verification_code_auth"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="@+id/edt_phone_number_activity_phone_auth"
            app:layout_constraintEnd_toEndOf="@+id/edt_phone_number_activity_phone_auth" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_number_activity_phone_auth"/>

    <TextView
            android:text="@string/tv_resend_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resend_sms_phone_auth_verification"
            android:textStyle="bold|italic"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/edt_phone_number_activity_phone_auth"
    />


    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="72dp"
            android:layout_height="72dp" android:elevation="10dp"
            android:id="@+id/progressBar" android:visibility="invisible"
            android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.478"/>

    <Button
            android:text="@string/btn_login"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/btn_auth_authentication"
            android:background="@drawable/rounded_btn_login_login"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_virification_authentication"
            app:layout_constraintStart_toStartOf="@+id/edt_virification_authentication"
            app:layout_constraintEnd_toEndOf="@+id/edt_virification_authentication"/>
    <ImageView
            android:layout_width="242dp"
            android:layout_height="51dp" app:srcCompat="@drawable/delisous_text"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toStartOf="@+id/progressBar"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>