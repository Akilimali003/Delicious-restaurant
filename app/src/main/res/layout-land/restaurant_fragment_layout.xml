<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/img_background">

    <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_icon"
                    android:src="@drawable/cuisine_africaine"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:layout_width="120dp"
                    android:layout_height="70dp"/>

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:layout_alignParentTop="true"
                    android:text="Kivu Restaurant"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:ems="25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_description"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:layout_below="@+id/tv_title"
                    android:text="Restaurant qui fournis les cuisines, italienne, americaine, chinoise et congolaise, nous sommes situer a Katayi, av. blablabla No. 28, soyez le bienvenue."
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:ems="25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <RatingBar
                    android:id="@+id/rb_quotation"
                    android:layout_toRightOf="@id/iv_icon"
                    android:layout_below="@id/tv_description"
                    android:paddingTop="5dp"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5"
                    android:clickable="true"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</ScrollView>